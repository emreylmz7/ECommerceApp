@model List<ResultAboutDto>

@foreach(var item in Model)
{
    <div class="text-light mt-5 pt-5" style="background-color:black">
        <div class="container">
            <div class="row pt-5">
                <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                    <img class="img-fluid pb-5" src="~/img/ollie_light.png" width="150px" alt="">
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-light mr-3"></i>@item.Address</p>
                    <p class="mb-2"><i class="fa fa-envelope text-light mr-3"></i>@item.Email</p>
                    <p class="mb-0"><i class="fa fa-phone-alt text-light mr-3"></i>@item.Phone</p>
                </div>
                <div class="col-lg-8 col-md-12">
                    <div class="row">
                        <div class="col-md-6 mb-5">
                            <h5 class="text-secondary text-uppercase mb-4">Quick Shop</h5>
                            <div class="d-flex flex-column justify-content-start">
                                <a class="text-secondary mb-2" href="/Default/Index"><i class="fa fa-angle-right mr-2"></i>Home</a>
                                <a class="text-secondary mb-2" href="/ProductList/Index"><i class="fa fa-angle-right mr-2"></i>Our Shop</a>
                                <a class="text-secondary mb-2" href="/ProductList/ProductDetail"><i class="fa fa-angle-right mr-2"></i>Shop Detail</a>
                                <a class="text-secondary mb-2" href="/ShoppingCart/Index"><i class="fa fa-angle-right mr-2"></i>Shopping Cart</a>
                                <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
                                <a class="text-secondary" href="/Contact/Index"><i class="fa fa-angle-right mr-2"></i>Contact Us</a>
                            </div>
                        </div>

                        <div class="col-md-6 mb-5">
                            <h5 class="text-secondary text-uppercase mb-4">Newsletter</h5>
                            <p>Be informed about all our innovations and campaigns.</p>
                            <form action="">
                                <div class="input-group">
                                    <input type="text" class="form-control rounded" placeholder="Email ">
                                    <div class="input-group-append">
                                        <button class="btn btn-light rounded">Sign Up</button>
                                    </div>
                                </div>
                            </form>
                            <h6 class="text-secondary text-uppercase mt-4 mb-3">Follow Us</h6>
                            <div class="d-flex">
                                <a class="btn btn-light btn-square mr-2 rounded-circle" href="#"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-light btn-square mr-2 rounded-circle" href="#"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-light btn-square mr-2 rounded-circle" href="#"><i class="fab fa-linkedin-in"></i></a>
                                <a class="btn btn-light btn-square rounded-circle" href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row border-top py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
                <div class="col-md-6 px-xl-0">
                    <p class="mb-md-0 text-center text-md-left text-secondary">
                        All Rights Reserved. Designed
                        by
                        <a class="text-primary" href="#">Ollie Lab. Company LTD.ŞTİ.</a>
                    </p>
                </div>
                <div class="col-md-6 px-xl-0 text-center text-md-right">
                    <img class="img-fluid" src="~/online-shop-website-template/img/payments.png" alt="">
                </div>
            </div>
        </div>

    </div>

    <a href="#" class="btn btn-primary back-to-top rounded-circle"><i class="fa fa-angle-double-up"></i></a>
}




