@model List<ResultCategoryDto>

@{
    <link rel="stylesheet" href="~/css/navbar.css" />
}

<div class="container-fluid bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn d-flex align-items-center justify-content-between bg-light w-80 rounded" data-toggle="collapse" href="#navbar-vertical" style="height: 50px; padding: 0 10px;">
                    <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>Categories</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                    <div class="navbar-nav w-100">
                        @foreach (var item in Model)
                        {
                            <a href="/ProductList/Index/@item.CategoryId" class="nav-item nav-link">@item.Name</a>
                        }
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-dark py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <img class="img-fluid" src="~/img/ollie_logo.png" width="150px" alt="">
                    </a>
                    <button type="button" class="navbar-toggler bg-dark rounded" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">

                            <a href="/Default/Index" class="nav-item nav-link text-dark">Home</a>

                            <a href="/ProductList/Index" class="nav-item nav-link text-dark">Shop</a>

                            <a href="/Contact/Index" class="nav-item nav-link active text-dark">Contact</a>

                            <a href="/AboutUs/Index" class="nav-item nav-link active text-dark">About Us</a>

                            <a href="/FAQ/Index" class="nav-item nav-link active text-dark">FAQ</a>

                        </div>
                        <div class="navbar-nav ml-auto py-0 d-flex align-items-center">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <a href="User/WishList/Index" class="btn px-0">
                                    <i class="fas fa-heart text-danger"></i>
                                    <span class="badge text-dark border border-dark rounded-circle" style="padding-bottom: 2px;">0</span>
                                </a>
                                <a href="/ShoppingCart/Index" class="btn px-0 ml-3">
                                    <i class="fas fa-shopping-cart text-warning"></i>
                                    <span class="badge text-dark border border-dark rounded-circle" style="padding-bottom: 2px;">@ViewBag.BasketCount</span>
                                </a>
                            
                                <div class="nav-item dropdown">
                                    <a href="#" class="btn px-0 ml-3 dropdown-toggle" data-toggle="dropdown">
                                        <i class="fas fa-user text-dark"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right bg-light rounded-0 border-0 m-0">
                                        <a href="/User/Profile/Index" class="dropdown-item text-dark">Profile</a>
                                        <a href="/User/Orders/Index" class="dropdown-item text-dark">My Orders</a>
                                        <a href="/Login/Logout" class="dropdown-item text-dark">Logout</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a href="/Login/Index" class="btn px-0 ml-3">
                                    Login
                                </a>
                                <a href="/Register/Index" class="btn px-0 ml-3">
                                    Register
                                </a>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
