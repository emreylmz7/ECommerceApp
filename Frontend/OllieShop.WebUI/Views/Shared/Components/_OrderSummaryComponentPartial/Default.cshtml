@model BasketTotalDto

<div class="col-xl-4">
    <div class="card checkout-order-summary">
        <div class="card-body">
            <div class="p-3 bg-light mb-3 d-flex justify-content-between">
                <h3 class="font-bold h5 mb-0">Order Summary</h3>
                <span class="h5 float-end ms-2">#MN0123</span>
            </div>
            <div class="">
                <table class="table table-centered mb-0 table-nowrap">
                    <thead>
                        <tr>
                            <th class="border-top-0" scope="col">Product</th>
                            <th class="border-top-0" scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.BasketItems)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-16 text-truncate"><a href="#" class="text-dark">@item.ProductName</a></h5>
                                    <p class="text-muted mb-0 mt-1">$ @item.UnitPrice x @item.Quantity</p>
                                </td>
                                <td>$ @((item.UnitPrice * item.Quantity).ToString("F0"))</td>
                            </tr>
                        }
                        
                        <tr>
                            <td colspan="1">
                                <h5 class="font-size-10" style="font-size:1.1rem">Sub Total :</h5>
                            </td>
                            <td>
                                $ @Model.TotalPrice.ToString("F0")
                            </td>
                        </tr>
                        <tr>
                            <td colspan="1">
                                <h5 class="font-size-10 m-0" style="font-size:1.1rem">Discount :</h5>
                            </td>
                            <td>
                                - $ @((((Model.TotalPrice * (1 + Model.VATRate)) / 100) * Model.DiscountRate).ToString("F0"))
                            </td>
                        </tr>

                        <tr>
                            <td colspan="1">
                                <h5 class="font-size-10 m-0" style="font-size:1.1rem">Shipping Charge :</h5>
                            </td>
                            <td>
                                $ @Model.ShippingCost.ToString("F0")
                            </td>
                        </tr>
                        <tr>
                            <td colspan="1">
                                <h5 class="font-size-10 m-0" style="font-size:1.1rem">Estimated Tax :</h5>
                            </td>
                            <td>
                                $ @((Model.TotalPrice * Model.VATRate).ToString("F0"))
                            </td>
                        </tr>

                        <tr class="bg-light">
                            <td colspan="1">
                                <h5 class="m-0" style="font-size:1.1rem">Total:</h5>
                            </td>
                            <td class="font-bold h4">
                                $ @Model.TotalPriceWithVATAndShipping.ToString("F0")
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>