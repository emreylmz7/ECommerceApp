@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30  rounded">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <span class="breadcrumb-item active">Contact</span>
            </nav>
        </div>
    </div>
</div>

<div class="container">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact Us</span></h2>
    <div class="row">
        <div class="col-lg-7 mb-5 ">
            <div class="contact-form bg-light p-30 rounded">
                <div id="success"></div>
                <form name="sentMessage" id="contactForm" novalidate="novalidate">
                    <div class="control-group">
                        <input type="text" class="form-control rounded" id="name" placeholder="Your Name"
                               required="required" data-validation-required-message="Please enter your name" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control rounded" id="email" placeholder="Your Email"
                               required="required" data-validation-required-message="Please enter your email" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control rounded" id="subject" placeholder="Subject"
                               required="required" data-validation-required-message="Please enter a subject" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control rounded" rows="8" id="message" placeholder="Message"
                                  required="required"
                                  data-validation-required-message="Please enter your message"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-outline-dark rounded btn-block btn-sm my-2" type="submit" id="sendMessageButton">
                            Send
                        </button>
                        @* <a class="btn btn-outline-dark rounded btn-block btn-sm my-2" href="#">Apply</a> *@

                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-5 mb-5 ">
            <div class="bg-light p-30 mb-30 rounded">
                <iframe style="width: 100%; height: 250px;"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                        frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                <div class="pt-5">
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3 text-dark"></i>Red Crescent Street No:174, Antalya, TURKEY</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3 text-dark"></i>info@ollielab.com</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3 text-dark"></i>+0242 45 45</p>
                </div>
            </div>
            
        </div>
    </div>
</div>
<!-- Contact End -->