@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard /</span> Categories</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Category Operations</h5>
        @* <p class="px-4 text-muted">On this page, you can manage the product categories of your e-commerce site. You can add new categories, edit existing ones, or delete them. Categories help your customers find products more easily and improve the organization of your site.</p> *@
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category</th>
                        <th>Image URL</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach(var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong></td>
                            <td>@item.ImageUrl</td>
                            <td><span class="badge bg-label-primary me-1">Active</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Category/UpdateCategory/@item.CategoryId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="/Admin/Category/DeleteCategory/@item.CategoryId"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
            <button type="button" class="btn btn-primary m-4" onclick="window.location.href='/Admin/Category/CreateCategory/'">
                <span class="tf-icons bx bx-plus-medical"></span>&nbsp; Add Category
            </button>

      
        </div>
    </div>
</div>

