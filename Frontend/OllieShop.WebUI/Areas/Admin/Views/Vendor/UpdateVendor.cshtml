@model UpdateVendorDto

@{
    ViewData["Title"] = "UpdateVendor";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Add /</span> Update Vendor</h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Update Vendor</h5>
                    <small class="text-muted float-end">Update Process</small>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="VendorId" />
                        <div class="mb-3">
                            <label class="form-label" for="name">Name</label>
                            <input type="text" asp-for="Name" class="form-control" id="name" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="imageUrl">Image URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" id="imageUrl" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
