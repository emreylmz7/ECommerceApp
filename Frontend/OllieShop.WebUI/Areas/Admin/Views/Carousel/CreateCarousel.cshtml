@model CreateCarouselDto

@{
    ViewData["Title"] = "CreateCarousel";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Add /</span> Add Carousel</h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Add Carousel</h5>
                    <small class="text-muted float-end">Default label</small>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input type="text" asp-for="Title" class="form-control" id="title" placeholder="Carousel Title" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <input type="text" asp-for="Description" class="form-control" id="description" placeholder="Carousel Description" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="imageUrl">Image URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" id="imageUrl" placeholder="Carousel Image URL" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="status">Status</label>
                            <select asp-for="Status" class="form-control" id="status">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
