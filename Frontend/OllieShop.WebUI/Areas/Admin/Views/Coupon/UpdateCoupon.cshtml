@model UpdateCouponDto

@{
    ViewData["Title"] = "UpdateCoupon";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Edit /</span> Edit Coupon</h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Edit Coupon</h5>
                    <small class="text-muted float-end">Update Process</small>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="CouponId" />
                        <div class="mb-3">
                            <label class="form-label" for="code">Code</label>
                            <input type="text" asp-for="Code" class="form-control" id="code" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="rate">Rate</label>
                            <input type="number" asp-for="Rate" class="form-control" id="rate" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="isActive">Is Active</label>
                            <input type="checkbox" asp-for="IsActive" class="form-check-input" id="isActive" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="validDate">Valid Date</label>
                            <input type="date" asp-for="ValidDate" class="form-control" id="validDate" />
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
