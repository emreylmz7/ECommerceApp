@model List<ResultCouponDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard /</span> Coupons</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Coupon Operations</h5>
        @* <p class="px-4 text-muted">On this page, you can manage the Coupon section of your e-commerce site. You can add new coupons, edit existing ones, or delete them. Coupon section contains information about discounts and offers.</p> *@
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Code</th>
                        <th>Rate</th>
                        <th>Is Active</th>
                        <th>Valid Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Code</td>
                            <td>@item.Rate</td>
                            <td>@item.IsActive ? "Yes" : "No"</td>
                            <td>@item.ValidDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Coupon/UpdateCoupon/@item.CouponId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="/Admin/Coupon/DeleteCoupon/@item.CouponId"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="button" class="btn btn-primary m-4" onclick="window.location.href='/Admin/Coupon/CreateCoupon/'">
                <span class="tf-icons bx bx-plus-medical"></span>&nbsp; Add Coupon
            </button>
        </div>
    </div>
</div>
